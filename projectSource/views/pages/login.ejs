<%- include ('../partials/header') %> <%- include ('../partials/menu') %> <%- include ('../partials/message') %>


<main>
  <section class = "login py-5">
    <div class="container">
      <div class = "row g-0">
        <div class = "col-lg-5">
          <img src="img/game.png" class="img-fluid" alt = "">
        </div>  
        <div class="col-lg-7 text-center py-5">
            <h1>Login:</h1>
              <form action = "/login" method = "POST">
                  <div class="form-row py-3 pt-5">  
                        <!-- Username Input input -->
                        <div class="offset-1 col-lg-10">
                            <label class="form-label" for="username"></label>
                            <input type="text" id="username" class="form-control px-3" name = "username" placeholder="Username">
                        </div>

                        <div class="offset-1 col-lg-10">
                            <label for="inputPassword3" class="form-label"></label>
                            <input type="password" name="password" class="form-control px-3" id="inputPassword3 password" placeholder="Password">
                        </div>
                        <div class="form-row py-3">
                          <!-- Submit button -->
                          <div class="offset-1 col-lg-10">
                              <button type="submit" class="btn btn-primary btn-block mb-4">Submit</button>
                          </div>
                        </div>
                  </div> 
              </form>
        </div>        
      </div>
    </div>
  </section>
</main>

