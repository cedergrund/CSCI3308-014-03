<%- include ('../partials/header') %> <%- include ('../partials/menu') %> <%- include ('../partials/message') %>


<main>
  <div class="container">
    <h1>Login:</h1>
    <form action = "/login" method = "POST">
        <!-- Username Input input -->
        <div class="form-outline mb-3">
          <label class="form-label" for="username">Username</label>
          <input type="text" id="username" class="form-control" name = "username"/>
          <small class="form-text text-muted">Input your username here</small>
        </div>

        <div class="form-outline mb-3">
          <label for="inputPassword3" class="form-label">Password</label>
            <input type="password" name="password" class="form-control" id="inputPassword3 password">
            <small class="form-text text-muted">Input your password here</small>
        </div>
      
        <!-- Submit button -->
        <button type="submit" class="btn btn-primary btn-block mb-4">Submit</button>
      </form>
  </div>
</main>

